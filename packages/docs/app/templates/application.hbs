{{page-title 'Ember Fast Marquee'}}

<header class='bg-ember-orange-500 py-7 w-full'>
  {{! <img
    src='https://raw.githubusercontent.com/ember-learn/ember-website/main/public/images/brand/Ember%20Logos/Ember/ember-1c-on-dark-bg.png'
    width='1284'
    height='648'
    alt='ember'
    class='w-40'
  /> }}
  <div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8'>
    <div class='flex justify-between items-baseline gap-8 flex-col md:flex-row'>
      <div class='flex items-baseline gap-4 mx-auto md:w-80 w-full'>
        <Marquee
          @speed={{70}}
          @gradient={{true}}
          @gradientColor='224,78,57'
          @fillRow={{true}}
        >
          <LinkTo @route='index'>
            <h1 class='text-white italic font-bold text-3xl mr-4'>Ember Fast
              Marquee</h1>
          </LinkTo>
        </Marquee>

      </div>
      <nav class='text-white flex-auto w-full'>
        <ul class='flex gap-4'>
          <li><LinkTo @route='demo' class='hover:underline'>Demo</LinkTo></li>
          <li class='mr-auto'><LinkTo
              @route='docs'
              class='hover:underline'
            >Documentation</LinkTo></li>
          <li><a
              class='hover:underline'
              href='https://github.com/evoactivity/ember-fast-marquee'
            >GitHub</a></li>
          <li><a
              class='hover:underline'
              href='https://npmjs.org/package/ember-fast-marquee'
            >NPM</a></li>
        </ul>
      </nav>
    </div>
  </div>
</header>

{{outlet}}

