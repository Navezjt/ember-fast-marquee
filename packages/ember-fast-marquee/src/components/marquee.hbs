<div
  class={{this.styles.root}}
  {{marquee
    this
    delay=this.delay
    direction=this.direction
    fillRow=this.fillRow
    gradientWidth=this.gradientWidth
    loop=this.loop
    marqueeSelector=this.styles.marquee
    pauseOnClick=this.pauseOnClick
    pauseOnHover=this.pauseOnHover
    play=this.play
    rgbaGradientColor=this.rgbaGradientColor
    speed=this.speed
  }}
  data-test-marquee
  ...attributes
>
  {{#if this.gradient}}
    <div class={{this.styles.overlay}} data-test-marquee-gradient></div>
  {{/if}}
  <div
    class={{this.styles.scroller}}
    data-test-marquee-scroller
    {{observe-mutation
      this.resetAnimations
      childList=true
      subtree=false
      attributes=false
      characterData=false
    }}
  >
    <div
      class={{this.styles.marquee}}
      data-test-marquee-marquee
      {{on 'animationiteration' this.onCycleComplete}}
      {{on 'animationend' this.onFinish}}
    >{{yield}}</div>
    {{#each this.repeater}}
      <div
        class={{this.styles.marquee}}
        aria-hidden='true'
        data-test-marquee-repeater
      >{{yield}}</div>
    {{/each}}
  </div>
</div>
